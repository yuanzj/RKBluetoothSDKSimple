<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.rokyinfo.rkbluetoothle_simple.MainActivity">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上电"
            android:onClick="powerOn"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="断电"
            android:onClick="powerOff"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="寻车"
            android:onClick="find"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车况查询"
            android:onClick="getCarStatus"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="故障查询"
            android:onClick="getFault"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中控参数设置"
            android:onClick="setCenterControlParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中控参数查询"
            android:onClick="getCenterControlParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="客户化配置"
            android:onClick="setCustParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取客户化配置参数"
            android:onClick="getCustParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="来电/短信提示设置"
            android:onClick="setCallAndMsgParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

    </LinearLayout>

</ScrollView>
