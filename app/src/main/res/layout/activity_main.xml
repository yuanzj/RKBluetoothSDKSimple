<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.rokyinfo.rkbluetoothle_simple.MainActivity">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设防"
            android:onClick="lock"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="撤防"
            android:onClick="unlock"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="寻车"
            android:onClick="find"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开坐桶盖"
            android:onClick="openBox"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车况查询"
            android:onClick="getCarStatus"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="故障查询"
            android:onClick="getFault"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中控参数设置"
            android:onClick="setCenterControlParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中控参数查询"
            android:onClick="getCenterControlParams"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本查询"
            android:onClick="getFirmwareVersion"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询白名单"
            android:onClick="getRemoteControllers"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同步白名单"
            android:onClick="syncRemoteControllers"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置剩余里程显示状态"
            android:onClick="setRemainderRange"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取剩余里程显示状态"
            android:onClick="getRemainderRangeStatus"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置电池参数"
            android:onClick="setBatteryParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取电池参数"
            android:onClick="getBatteryParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置电机参数"
            android:onClick="setElectricMachineParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取电机参数"
            android:onClick="getElectricMachineParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置电控参数"
            android:onClick="setMotorControllerParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取电控参数"
            android:onClick="getMotorControllerParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置速度参数"
            android:onClick="setSpeedParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取速度参数"
            android:onClick="getSpeedParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置档位参数"
            android:onClick="setGearParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取档位参数"
            android:onClick="getGearParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置云动力参数"
            android:onClick="setTurboParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取云动力参数"
            android:onClick="getTurboParameter"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启或关闭GPS服务"
            android:onClick="setGatewayStatus"
            android:layout_marginTop="@dimen/widget_vertical_margin"/>

    </LinearLayout>

</ScrollView>
